{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ],
      "@*": [
        "./*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/lucid",
      "@adonisjs/drive-s3",
      "@adonisjs/session",
      "@adonisjs/mail"
    ],
    "module": "ESNext", // Ensures you're using ES6 modules
    "moduleResolution": "node", // Required for working with Node.js module system
    "target": "ES2020" // Set this to the same version as your ESLint (latest features)
  }
}